{
  "entry": ["src/**/index.ts"],
  "ignoreBinaries": ["plantuml"],
  "ignoreDependencies": [
    "@langchain/google-genai",
    "@langchain/qdrant",
    "@langchain/textsplitters",
    "@qdrant/js-client-rest",
    "ajv-formats",
    "chokidar",
    "fastify",
    "js-yaml",
    "json5",
    "picomatch",
    "tiktoken",
    "@types/js-yaml",
    "@types/picomatch",
    "@types/uuid"
  ],
  "project": ["*/**", "!docs/**"],
  "rules": {
    "exports": "off",
    "types": "off"
  },
  "vitest": {
    "entry": ["*/**/*.test.!(*.*)"]
  }
}
