{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "watch": {
      "type": "object",
      "properties": {
        "paths": {
          "minItems": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/__schema0"
          }
        },
        "ignored": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pollIntervalMs": {
          "type": "number"
        },
        "usePolling": {
          "type": "boolean"
        },
        "debounceMs": {
          "type": "number"
        },
        "stabilityThresholdMs": {
          "type": "number"
        }
      },
      "required": [
        "paths"
      ]
    },
    "configWatch": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "debounceMs": {
          "type": "number"
        }
      }
    },
    "embedding": {
      "type": "object",
      "properties": {
        "provider": {
          "default": "gemini",
          "type": "string"
        },
        "model": {
          "default": "gemini-embedding-001",
          "type": "string"
        },
        "chunkSize": {
          "type": "number"
        },
        "chunkOverlap": {
          "type": "number"
        },
        "dimensions": {
          "type": "number"
        },
        "apiKey": {
          "type": "string"
        },
        "rateLimitPerMinute": {
          "type": "number"
        },
        "concurrency": {
          "type": "number"
        }
      }
    },
    "vectorStore": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "collectionName": {
          "type": "string"
        },
        "apiKey": {
          "type": "string"
        }
      },
      "required": [
        "url",
        "collectionName"
      ]
    },
    "metadataDir": {
      "type": "string"
    },
    "api": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number"
        }
      }
    },
    "extractors": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {}
    },
    "inferenceRules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "match": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {}
          },
          "set": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {}
          }
        },
        "required": [
          "match",
          "set"
        ]
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string"
        },
        "file": {
          "type": "string"
        }
      }
    },
    "shutdownTimeoutMs": {
      "type": "number"
    }
  },
  "required": [
    "watch",
    "embedding",
    "vectorStore"
  ],
  "definitions": {
    "__schema0": {
      "type": "string"
    }
  }
}
